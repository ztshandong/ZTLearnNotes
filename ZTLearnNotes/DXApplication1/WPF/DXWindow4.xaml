<dx:DXWindow
    x:Class="WPF.DXWindow4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar"
    Title="DXWindow4" Height="350" Width="525"
    >

    <Grid>
        <DockPanel>
            <dxb:MainMenuControl DockPanel.Dock="Top">
                <dxb:BarSubItem Content="BarSubItem" Glyph="{dx:DXImage Image=Apply_32x32.png}" LargeGlyph="{dx:DXImage Image=Apply_32x32.png}" BarItemDisplayMode="ContentAndGlyph"></dxb:BarSubItem>
            </dxb:MainMenuControl>        
        </DockPanel>
    </Grid>
</dx:DXWindow>
